<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/black"
        android:layout_alignParentTop="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/roundCardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="0dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Question_ProfileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Question_PersonQuestion"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/roundCardView"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="-302dp"
        android:layout_toEndOf="@+id/roundCardView"
        android:fontFamily="@font/inter"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="asdjfklajslkdjf;sk;ldjfk;laj kdsjfkljasdk;jf;a sdklfj kla dsklfj ak;dsj;f" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/Question_PersonQuestion"
        android:layout_marginBottom="-25dp"
        android:background="@color/black" />
</RelativeLayout>