<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProductFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/Create_ProductRentDuration"
            android:layout_width="141dp"
            android:layout_height="53dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey"
            android:visibility="gone"
            android:entries="@array/rentduration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/Create_ProductRentTime"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductBuyOrRent" />

        <Spinner
            android:id="@+id/Create_ProductDeliveryMethod"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@color/grey"
            android:entries="@array/typeofdelivery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintStart_toEndOf="@+id/Create_ProductBuyorRent_Label"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductRentTime" />

        <TextView
            android:id="@+id/Create_ProductDeliveryMethodLabel"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/inter_bold"
            android:text="Delivery \nmethod"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.067"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductRentTimeLabel" />

        <Spinner
            android:id="@+id/Create_ProductMeasure"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="12dp"
            android:background="@color/grey"
            android:entries="@array/typeofmeasure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.296"
            app:layout_constraintStart_toEndOf="@+id/Create_ProductMeasureLabel"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductStock" />

        <TextView
            android:id="@+id/Create_ProductMeasureLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="Measure"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductStockLabel" />

        <EditText
            android:id="@+id/Create_ProductStock"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toEndOf="@+id/Create_ProductStockLabel"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductPrice" />

        <TextView
            android:id="@+id/Create_ProductStockLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/inter_bold"
            android:text="Stock"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductPriceLabel" />

        <TextView
            android:id="@+id/Create_ProductPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inter_bold"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductLocation" />

        <TextView
            android:id="@+id/Create_ProductRentTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:fontFamily="@font/inter_bold"
            android:text="Duration"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.081"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductBuyorRent_Label" />

        <EditText
            android:id="@+id/Create_ProductRentTime"
            android:layout_width="89dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/grey"
            android:inputType="number"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toEndOf="@+id/Create_ProductPrice_Label"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductBuyOrRent" />

        <TextView
            android:id="@+id/Create_ProductBuyorRent_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/inter_bold"
            android:text="Buy/Rent"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductCategoryLabel" />

        <Spinner
            android:id="@+id/Create_ProductBuyOrRent"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@color/grey"
            android:entries="@array/typeofproduct"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.611"
            app:layout_constraintStart_toEndOf="@+id/Create_ProductBuyorRent_Label"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductCategory" />

        <TextView
            android:id="@+id/Create_ProductTitle_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="Product Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Create_ProductTitle"
            android:layout_width="369dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.619"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductTitle_label" />

        <TextView
            android:id="@+id/Create_ProductImage_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter_bold"
            android:text="Enter Image"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductTitle" />

        <ImageView
            android:id="@+id/Create_ProductImage"
            android:layout_width="360dp"
            android:layout_height="201dp"
            android:layout_marginTop="12dp"
            android:src="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductImage_label" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter_bold"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.101"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductImage" />

        <TextView
            android:id="@+id/Create_ProductLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <Spinner
            android:id="@+id/Create_ProductLocation"
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.604"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductLocationLabel" />

        <TextView
            android:id="@+id/Create_ProductPrice_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inter_bold"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductLocation" />

        <EditText
            android:id="@+id/Create_ProductPrice"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:inputType="number"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Create_ProductPrice_Label"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductLocation" />

        <TextView
            android:id="@+id/Create_ProductFeatures_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/inter_bold"
            android:text="Features(if present)"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.084"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductDeliveryMethodLabel" />

        <LinearLayout
            android:id="@+id/Create_ProductFeatures"
            android:layout_width="409dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:background="@color/grey"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductFeatures_label" />

        <Button
            android:id="@+id/Create_SellProduct"
            android:layout_width="154dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/forest_yellow"
            android:fontFamily="@font/noto_serif_bold"
            android:text="Sell Product"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductFeatures"
            app:layout_constraintVertical_bias="1.0" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Create_AddFeatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/dark_green"
            android:src="@drawable/baseline_add_24"
            app:layout_constraintStart_toEndOf="@+id/Create_ProductFeatures_label"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductDeliveryMethod" />

        <Spinner
            android:id="@+id/Create_ProductCategory"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/grey"
            android:entries="@array/category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.289"
            app:layout_constraintStart_toEndOf="@+id/Create_ProductCategoryLabel"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductMeasure" />

        <TextView
            android:id="@+id/Create_ProductCategoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/inter_bold"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Create_ProductMeasureLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>